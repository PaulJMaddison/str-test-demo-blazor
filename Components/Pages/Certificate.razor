@page "/certificate"
@inject IJSRuntime Js

<PageTitle>Certificate</PageTitle>

<h1>Certificate</h1>
<p class="text-muted">Demo-only certificate workflow with placeholder actions and no persistence.</p>

<section class="card shadow-sm">
    <div class="card-body">
        <h2 class="h5">Certificate Actions</h2>
        <p class="mb-3">Use this placeholder to simulate certificate output for a completed test.</p>
        <button class="btn btn-outline-primary" @onclick="GenerateCertificate">Generate Certificate PDF (demo)</button>
    </div>
</section>

@code {
    private async Task GenerateCertificate()
    {
        await Js.InvokeVoidAsync("alert", "Demo only: certificate generation will be wired to PDF output later.");
    }
}
