@page "/dashboard"

<PageTitle>Dashboard</PageTitle>

<h1>Dashboard</h1>
<p class="text-muted">Demo-only view of key testing metrics using in-memory sample data.</p>

<div class="row g-3 mb-4">
    <div class="col-12 col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h2 class="h6 text-uppercase text-muted">Tests Today</h2>
                <p class="display-6 mb-0">@TestsToday</p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h2 class="h6 text-uppercase text-muted">Open Tests</h2>
                <p class="display-6 mb-0">@OpenTests</p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h2 class="h6 text-uppercase text-muted">Overdue</h2>
                <p class="display-6 mb-0">@Overdue</p>
            </div>
        </div>
    </div>
</div>

<section class="card shadow-sm">
    <div class="card-body">
        <h2 class="h5">Recent Tests</h2>
        <div class="table-responsive">
            <table class="table table-striped align-middle mb-0">
                <thead>
                    <tr>
                        <th>Test ID</th>
                        <th>Asset</th>
                        <th>Status</th>
                        <th>Technician</th>
                        <th>Completed At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var test in RecentTests)
                    {
                        <tr>
                            <td>@test.TestId</td>
                            <td>@test.Asset</td>
                            <td>@test.Status</td>
                            <td>@test.Technician</td>
                            <td>@test.CompletedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@code {
    private int TestsToday => 12;
    private int OpenTests => 5;
    private int Overdue => 2;

    private readonly List<RecentTestRow> RecentTests =
    [
        new("TST-1049", "Boiler #2", "Passed", "A. Ruiz", DateTime.Today.AddHours(-1)),
        new("TST-1048", "Pump Station 7", "Failed", "M. Patel", DateTime.Today.AddHours(-3)),
        new("TST-1047", "Generator C", "Passed", "L. Chen", DateTime.Today.AddHours(-6)),
        new("TST-1046", "Compressor A", "Open", "S. Kim", DateTime.Today.AddDays(-1).AddHours(2))
    ];

    private record RecentTestRow(string TestId, string Asset, string Status, string Technician, DateTime CompletedAt);
}
